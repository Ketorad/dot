#!/bin/bash
# Set picture as wallpaper

targetFile="$HOME/dot/wallpaper"
folderPath=$(pwd)
sourceFile="$1"

if [[ $1 ]]; then
#	ln -sf $folderPath/$wallpaper $linkPath
	cp -f $folderPath/$sourceFile $targetFile
	git -C $HOME/dot commit wallpaper -m "updating wallpaper" && git push
	echo "Setting wallpaper to $folderPath/$wallpaper"
fi

feh --bg-center --bg-fill --no-xinerama $targetFile
